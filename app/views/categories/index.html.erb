    <div class="row col-12 ">
      <h3>Lista de categorias</h3>
    </div>
    <div class="row col-12 justify-content-end">
     <a href="/categories/new">  <button type="button"  class="btn btn-primary">Agregar</button> </a>
    </div>
    <div class="row col-12 mt-3">
      <table class="table">
        <tr>
          <th>id</th>
          <th>nombre</th>
          <th>descripción</th>
          <th>Acciones</th>
        </tr>
       
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td><%= link_to 'Edit', edit_category_path(category) %>
              <%= link_to 'Destroy', "/categories/#{category.id}",
              method: :delete,
              data: { confirm: 'Eliminar categoría?' } %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  
