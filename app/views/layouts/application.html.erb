<!DOCTYPE html>
<html>
  <head>
    <title>Src</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Home</a>
    
        <ul class="nav justify-content-end ">
          <% if user_signed_in? %>
          <li class="nav-item p-2"></li>
          <a href="/categories"> Categorias</a>
          </li>
          <li class="nav-item p-2"></li>
          <a href="/projects"> Proyectos </a>
          </li>
          <li class="nav-item p-2"></li>
          <%= link_to 'Salir', destroy_user_session_path,
              method: :delete%>
          </li>
          <%else%>
          <li class="nav-item p-2"></li>
          <a href="/users/sign_in"> Iniciar</a>
          </li>
          <li class="nav-item p-2"></li>
          <a href="/users/sign_up"> Registrar</a>
          </li>
          <% end %>
          
        </ul>
        
    
    </nav>

    <div class="container row col-12 justify-content-center p-4 "> 
      <div class="row col-12 justify-content-center">
        <% if notice %>
        <div class="alert col-6 alert-warning " role="alert">
         <%= notice %>
        </div> 
        <% end %>

        <% if alert %>
        <div class="alert col-6 alert-danger " role="alert">
         <%= alert %>
        </div> 
        <% end %>
      </div>
      <div class="container row fluid d-flex col-8">
        
      
    <%= yield %>
      </div>
    </div>
  </body>
</html>
